{
  "name": "rewind-exporter",
  "version": "1.0.0",
  "productName": "Rewind Exporter",
  "description": "Export your Rewind history into a single .mp4, locally",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "release": "dotenv -- electron-builder --publish always"
  },
  "build": {
    "appId": "com.rajeefmk.rewind-exporter",
    "artifactName": "${name}-${version}-${arch}.${ext}",
    "publish": {
      "provider": "github",
      "owner": "rajeefmk",
      "repo": "rewind.ai-exporter"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/ffmpeg-static/bin/${os}/${arch}/ffmpeg",
      "node_modules/ffmpeg-static/index.js",
      "node_modules/ffmpeg-static/package.json"
    ]
  },
  "repository": "https://github.com/rajeefmk/rewind.ai-exporter",
  "license": "MIT",
  "dependencies": {
    "ffmpeg-static": "^5.3.0"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  }
}
